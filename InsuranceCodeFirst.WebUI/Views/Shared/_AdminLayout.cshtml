<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - LifeSure Admin</title>

    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>

    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2e5c7f",
                        "primary-hover": "#244a66",
                        "secondary": "#64748b",
                        "background-light": "#f9fafb",
                        "background-dark": "#1f2937",
                        "surface": "#ffffff",
                    },
                    fontFamily: {
                        "display": ["Manrope", "sans-serif"],
                        "body": ["Noto Sans", "sans-serif"],
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            vertical-align: middle;
        }

        .sidebar-link {
            transition: all 0.2s ease;
        }

            .sidebar-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

            .sidebar-link.active {
                background-color: rgba(255, 255, 255, 0.15);
                border-left: 4px solid #60a5fa;
            }
        /* Scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            height: 6px;
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-background-light font-display text-slate-800 antialiased overflow-hidden">
    <div class="flex h-screen w-full bg-background-light">

        <aside class="hidden lg:flex flex-col w-64 bg-primary text-white h-full fixed left-0 top-0 z-30 shadow-xl transition-all duration-300">
            <div class="flex flex-col px-6 py-8 border-b border-white/10">
                <div class="flex items-center gap-3">
                    <div class="bg-white/10 p-2 rounded-lg">
                        <span class="material-symbols-outlined text-white text-3xl">shield_person</span>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold leading-none tracking-tight">LifeSure</h1>
                        <p class="text-white/60 text-xs font-medium mt-1 uppercase tracking-wider">Admin Panel</p>
                    </div>
                </div>
            </div>

            <nav class="flex-1 flex flex-col gap-2 p-4 overflow-y-auto">
                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white group hover:bg-white/10 transition-all" href="/Admin/AdminDashboard/Index">
                    <span class="material-symbols-outlined">dashboard</span> Dashboard
                </a>

                <div class="pt-4 pb-2 px-4 text-xs font-semibold text-white/40 uppercase tracking-wider">Sigorta Yönetimi</div>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Category/Index">
                    <span class="material-symbols-outlined">category</span> Kategoriler
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/InsurancePackage/Index">
                    <span class="material-symbols-outlined">inventory_2</span> Paketler
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Policy/Index">
                    <span class="material-symbols-outlined">description</span> Poliçeler
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Customer/Index">
                    <span class="material-symbols-outlined">group</span> Müşteriler
                </a>

                <div class="pt-4 pb-2 px-4 text-xs font-semibold text-white/40 uppercase tracking-wider">Site & İçerik</div>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Service/Index">
                    <span class="material-symbols-outlined">volunteer_activism</span> Hizmetler
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Feature/Index">
                    <span class="material-symbols-outlined">stars</span> Öne Çıkanlar
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Testimonial/Index">
                    <span class="material-symbols-outlined">reviews</span> Müşteri Yorumları
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/FAQ/Index">
                    <span class="material-symbols-outlined">help_center</span> S.S.S.
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/Banner/Index">
                    <span class="material-symbols-outlined">view_carousel</span> Bannerlar
                </a>

                <a class="sidebar-link flex items-center gap-3 px-4 py-3 rounded-lg text-sm font-medium text-white/80 hover:text-white hover:bg-white/10 transition-all group" href="/Admin/About/Index">
                    <span class="material-symbols-outlined">info</span> Hakkımızda
                </a>
            </nav>

            <div class="p-4 border-t border-white/10">
                <button class="flex w-full items-center justify-center gap-2 rounded-lg bg-white/10 px-4 py-3 text-sm font-bold text-white hover:bg-white/20 transition-colors">
                    <span class="material-symbols-outlined">logout</span> <span>Çıkış Yap</span>
                </button>
            </div>
        </aside>
        <div class="lg:ml-64 flex flex-col flex-1 h-full w-full relative transition-all duration-300">
            <header class="sticky top-0 z-20 flex h-20 items-center justify-between bg-white px-8 shadow-sm border-b border-gray-100">
                <div class="flex items-center gap-4 lg:hidden">
                    <button class="text-slate-600 hover:text-primary"><span class="material-symbols-outlined">menu</span></button>
                    <span class="text-primary font-bold text-lg">LifeSure</span>
                </div>

                <div class="hidden lg:flex flex-1 max-w-xl mx-auto">
                    <div class="relative w-full group">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-slate-400 group-focus-within:text-primary transition-colors">
                            <span class="material-symbols-outlined">search</span>
                        </div>
                        <input class="block w-full rounded-xl border-none bg-slate-50 py-3 pl-10 pr-3 text-sm text-slate-900 placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-primary/20 focus:bg-white transition-all shadow-sm" placeholder="Poliçe veya müşteri ara..." type="text" />
                    </div>
                </div>

                <div class="flex items-center gap-6">
                    <button class="relative text-slate-500 hover:text-primary transition-colors p-2 rounded-full hover:bg-slate-50">
                        <span class="material-symbols-outlined">notifications</span>
                        <span class="absolute top-2 right-2 h-2.5 w-2.5 rounded-full bg-red-500 border-2 border-white"></span>
                    </button>
                    <div class="flex items-center gap-3 pl-6 border-l border-slate-100">
                        <div class="text-right hidden sm:block">
                            <p class="text-sm font-bold text-slate-800">Admin</p>
                            <p class="text-xs text-slate-500">Yönetici</p>
                        </div>
                        <div class="h-10 w-10 rounded-full bg-primary/10 p-0.5 cursor-pointer">
                            <img alt="User Avatar" class="rounded-full h-full w-full object-cover" src="https://ui-avatars.com/api/?name=Admin+User&background=2e5c7f&color=fff" />
                        </div>
                    </div>
                </div>
            </header>
            <main class="flex-1 overflow-y-auto p-4 md:p-8 bg-background-light custom-scrollbar">
                <div class="mx-auto max-w-7xl flex flex-col gap-8">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
