@model List<ResultServiceDto>
@*
   _DefaultServiceComponentPartial
*@

<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Hizmetlerimiz</h4>
            <h1 class="display-4 mb-4">Size En İyi Hizmeti Sunuyoruz</h1>
            <p class="mb-0">
                Hayatın her alanında karşılaşabileceğiniz risklere karşı yanınızdayız. Geniş kapsamlı sigorta paketlerimizle, sizin ve sevdiklerinizin geleceğini bugünden güvence altına alıyoruz.
            </p>
        </div>
        <div class="row g-4 justify-content-center">
            @{
                int i = 0;
                string[] icons = { "fa fa-users", "fa fa-hospital", "fa fa-car", "fa fa-home", "fa fa-umbrella", "fa fa-plane" };
                string[] delays = { "0.2s", "0.4s", "0.6s", "0.8s" };
            }

            @foreach (var item in Model)
            {
                string currentIcon = icons[i % icons.Length];
                string currentDelay = delays[i % delays.Length];

                <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="@currentDelay">
                    <div class="service-item">
                        <div class="service-img">
                            <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/LifeSure-1.0.0/img/blog-1.png" : item.ImageUrl)" class="img-fluid rounded-top w-100" alt="@item.Title" style="height: 200px; object-fit: cover;">
                            <div class="service-icon p-3">
                                <i class="@currentIcon fa-2x"></i>
                            </div>
                        </div>
                        <div class="service-content p-4">
                            <div class="service-content-inner">
                                <a href="#" class="d-inline-block h4 mb-4">@item.Title</a>
                                <p class="mb-4">
                                    @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                </p>
                                <a class="btn btn-primary rounded-pill py-2 px-4" href="/Service/Index">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                </div>
                i++;
            }

            <div class="col-12 text-center wow fadeInUp" data-wow-delay="0.2s">
                <a class="btn btn-primary rounded-pill py-3 px-5" href="/Service/Index">Tüm Hizmetler</a>
            </div>
        </div>
    </div>
</div>