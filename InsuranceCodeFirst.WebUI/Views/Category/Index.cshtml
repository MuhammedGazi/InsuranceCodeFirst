@model List<ResulCategoryDto>
@{
    ViewData["Title"] = "Index";
    var count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>Index</th>
        <th>Kategori adı</th>
        <th>Kategori açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>
                <a class="btn btn-warning" href="/Category/UpdateCategory/@item.CategoryId">Güncelle</a>
                <a class="btn btn-success" href="/Category/DeleteCategory/@item.CategoryId">Sil</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Category/CreateCategory">Yeni Kategori</a>
