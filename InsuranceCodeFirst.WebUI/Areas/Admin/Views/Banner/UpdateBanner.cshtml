@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-slate-500 mb-2">
            <a href="/Admin/Banner/Index" class="hover:text-primary">Bannerlar</a>
            <span>/</span>
            <span>Düzenle</span>
        </div>
        <h2 class="text-2xl font-bold text-slate-900">#@Model.BannerId Nolu Bannerı Düzenle</h2>
    </div>

    <div class="bg-white rounded-xl shadow-card border border-slate-100 p-6 sm:p-8">
        <form method="post">
            <input type="hidden" name="BannerId" value="@Model.BannerId" />
            <div class="space-y-6">

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Başlık</label>
                    <input type="text" name="Title" value="@Model.Title" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5" required />
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Video URL</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                            <span class="material-symbols-outlined text-[20px]">link</span>
                        </span>
                        <input type="text" name="VideoUrl" value="@Model.VideoUrl" class="w-full rounded-lg border-slate-200 pl-10 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Açıklama</label>
                    <textarea name="Description" rows="4" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm">@Model.Description</textarea>
                </div>

                <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-slate-100">
                    <a href="/Admin/Banner/Index" class="px-5 py-2.5 rounded-lg border border-slate-200 text-slate-600 text-sm font-medium hover:bg-slate-50 transition-colors">İptal</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg bg-emerald-600 text-white text-sm font-bold hover:bg-emerald-700 shadow-lg shadow-emerald-600/20 transition-all">Değişiklikleri Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

