@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-slate-500 mb-2">
            <a href="/Admin/Service/Index" class="hover:text-primary">Hizmetler</a>
            <span>/</span>
            <span>Yeni Ekle</span>
        </div>
        <h2 class="text-2xl font-bold text-slate-900">Yeni Hizmet Oluştur</h2>
    </div>

    <div class="bg-white rounded-xl shadow-card border border-slate-100 p-6 sm:p-8">
        <form method="post">
            <div class="space-y-6">

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Hizmet Başlığı</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                            <span class="material-symbols-outlined text-[20px]">badge</span>
                        </span>
                        <input type="text" name="Title" class="w-full rounded-lg border-slate-200 pl-10 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5" placeholder="Örn: Araç Sigortası" required />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Görsel URL</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-400">
                            <span class="material-symbols-outlined text-[20px]">image</span>
                        </span>
                        <input type="text" name="ImageUrl" class="w-full rounded-lg border-slate-200 pl-10 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5" placeholder="https://..." />
                    </div>
                    <p class="text-xs text-slate-500 mt-1">Hizmeti temsil eden bir ikon veya fotoğraf bağlantısı.</p>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Açıklama</label>
                    <textarea name="Description" rows="5" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm" placeholder="Hizmet detaylarını buraya giriniz..." required></textarea>
                </div>

                <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-slate-100">
                    <a href="/Admin/Service/Index" class="px-5 py-2.5 rounded-lg border border-slate-200 text-slate-600 text-sm font-medium hover:bg-slate-50 transition-colors">İptal</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg bg-primary text-white text-sm font-bold hover:bg-primary-hover shadow-lg shadow-primary/20 transition-all">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

