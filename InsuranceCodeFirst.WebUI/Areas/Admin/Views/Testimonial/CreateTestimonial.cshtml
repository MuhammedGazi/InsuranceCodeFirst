@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-slate-500 mb-2">
            <a href="/Admin/Testimonial/Index" class="hover:text-primary">Referanslar</a>
            <span>/</span>
            <span>Yeni Ekle</span>
        </div>
        <h2 class="text-2xl font-bold text-slate-900">Yeni Müşteri Yorumu</h2>
    </div>

    <div class="bg-white rounded-xl shadow-card border border-slate-100 p-6 sm:p-8">
        <form method="post">
            <div class="space-y-6">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-bold text-slate-700 mb-2">Müşteri</label>
                        <div class="relative">
                            <select name="CustomerId" asp-items="ViewBag.Customers" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5 appearance-none bg-white">
                                <option value="">Müşteri Seçiniz</option>
                            </select>
                            <span class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-slate-500">
                                <span class="material-symbols-outlined text-[20px]">expand_more</span>
                            </span>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-bold text-slate-700 mb-2">Puan (Yıldız)</label>
                        <div class="relative">
                            <select name="starCount" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5 appearance-none bg-white">
                                <option value="5">⭐⭐⭐⭐⭐ (5 Yıldız)</option>
                                <option value="4">⭐⭐⭐⭐ (4 Yıldız)</option>
                                <option value="3">⭐⭐⭐ (3 Yıldız)</option>
                                <option value="2">⭐⭐ (2 Yıldız)</option>
                                <option value="1">⭐ (1 Yıldız)</option>
                            </select>
                            <span class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none text-slate-500">
                                <span class="material-symbols-outlined text-[20px]">star</span>
                            </span>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Müşteri Yorumu</label>
                    <textarea name="Description" rows="5" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm" placeholder="Müşterinin görüşlerini buraya giriniz..." required></textarea>
                </div>

                <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-slate-100">
                    <a href="/Admin/Testimonial/Index" class="px-5 py-2.5 rounded-lg border border-slate-200 text-slate-600 text-sm font-medium hover:bg-slate-50 transition-colors">İptal</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg bg-primary text-white text-sm font-bold hover:bg-primary-hover shadow-lg shadow-primary/20 transition-all">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

