@model List<ResultInsurancePackageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="card-title">Sigorta Paket Listesi</h4>
        <a href="/Admin/InsurancePackage/CreateInsurancePackage" class="btn btn-outline-primary">
            <i class="fa fa-plus"></i> Yeni Paket Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Paket Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Detaylar</th>
                        <th style="width: 200px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InsurancePackageId</td>
                            <td>
                                <strong>@item.InsurancePackageName</strong>
                            </td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @item.Category?.CategoryName
                                </span>
                            </td>
                            <td>@item.BasePrice.ToString("C")</td>
                            <td>@item.Details</td>
                            <td>
                                <a href="/Admin/InsurancePackage/DeleteInsurancePackage/@item.InsurancePackageId"
                                   class="btn btn-danger btn-sm"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>

                                <a href="/Admin/InsurancePackage/UpdateInsurancePackage/@item.InsurancePackageId"
                                   class="btn btn-warning btn-sm">Güncelle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning mt-3">
                Henüz herhangi bir sigorta paketi eklenmemiş.
            </div>
        }
    </div>
</div>

