@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-3xl mx-auto">
    <div class="mb-6">
        <div class="flex items-center gap-2 text-sm text-slate-500 mb-2">
            <a href="/Admin/Category/Index" class="hover:text-primary">Kategoriler</a>
            <span>/</span>
            <span>Yeni Ekle</span>
        </div>
        <h2 class="text-2xl font-bold text-slate-900">Yeni Kategori Oluştur</h2>
    </div>

    <div class="bg-white rounded-xl shadow-card border border-slate-100 p-6 sm:p-8">
        <form method="post">
            <div class="space-y-6">

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Kategori Adı</label>
                    <input type="text" name="CategoryName" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm py-2.5" placeholder="Örn: Sağlık Sigortası" required />
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Açıklama</label>
                    <textarea name="Description" rows="4" class="w-full rounded-lg border-slate-200 focus:border-primary focus:ring-primary/20 transition-all text-sm" placeholder="Kategori hakkında kısa bilgi..."></textarea>
                </div>

                <div class="flex items-center justify-end gap-3 pt-6 mt-6 border-t border-slate-100">
                    <a href="/Admin/Category/Index" class="px-5 py-2.5 rounded-lg border border-slate-200 text-slate-600 text-sm font-medium hover:bg-slate-50 transition-colors">İptal</a>
                    <button type="submit" class="px-5 py-2.5 rounded-lg bg-primary text-white text-sm font-bold hover:bg-primary-hover shadow-lg shadow-primary/20 transition-all">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

