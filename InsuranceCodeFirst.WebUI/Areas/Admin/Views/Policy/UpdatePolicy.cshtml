@model UpdatePolicyDto
@{
    ViewData["Title"] = "UpdatePolicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Poliçe Düzenle</h4>
    </div>
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="PolicyId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Poliçe Numarası</label>
                    <input type="text" class="form-control" asp-for="PolicyNumber" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Fiyat (₺)</label>
                    <input type="number" class="form-control" asp-for="Price" step="0.01" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Başlangıç Tarihi</label>
                    <input type="date" class="form-control" asp-for="StartDate" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Bitiş Tarihi</label>
                    <input type="date" class="form-control" asp-for="EndDate" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Müşteri</label>
                    <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control">
                        <option value="">-- Müşteri Seçiniz --</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Sigorta Paketi</label>
                    <select asp-for="InsurancePackageId" asp-items="ViewBag.InsurancePackages" class="form-control">
                        <option value="">-- Paket Seçiniz --</option>
                    </select>
                </div>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                <label class="form-check-label" for="IsActive">
                    Poliçe Aktif mi?
                </label>
            </div>

            <button type="submit" class="btn btn-warning text-white">
                <i class="fa fa-pen"></i> Güncelle
            </button>
            <a href="/Admin/Policy/Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>

